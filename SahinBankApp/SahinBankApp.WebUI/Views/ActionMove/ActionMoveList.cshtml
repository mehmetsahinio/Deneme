@model List<ActionMove>
<h6 class="display-4">Action List</h6>
<hr />
<a class="btn btn-sm btn-success" asp-controller="ActionMove" asp-action="ActionMoveCreate">Create</a>
<br />
<br />
<table class="table table-sm table-dark ">
    <tr>
        <td>Id</td>
        <td>UserId</td>
        <td>ActionType</td>
        <td>Date</td>
        <td>ActionAmount</td>
        <td>ActionDeduction</td>
        <td>InvoiceNumber</td>
        <td></td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="8">
                Hiç birAction bulunamadı
            </td>
        </tr>
    }
    else
    {
        @foreach (var ActionMove in Model)
        {
            <tr>
                <td>@ActionMove.ActionMoveId</td>
                <td>@ActionMove.UserId</td>
                <td>@ActionMove.ActionTypeId</td>
                <td>@ActionMove.Date</td>
                <td>@ActionMove.ActionAmount</td>
                <td>@ActionMove.ActionDeduction</td>
                <td>@ActionMove.InvoiceNumber</td>

                <td>
                    <a class="btn btn-sm btn-warning" asp-controller="ActionMove" asp-action="ActionMoveEdit" asp-route-id="@ActionMove.ActionMoveId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="ActionMove" asp-action="ActionMoveDelete" asp-route-id="@ActionMove.ActionMoveId">Delete</a>
                </td>
            </tr>
        }
    }
</table>