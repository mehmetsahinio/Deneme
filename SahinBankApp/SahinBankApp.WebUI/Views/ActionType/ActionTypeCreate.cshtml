@model ActionTypeModel

<h1 class="display-4">Create Action Type</h1>
<hr />
<form asp-controller="ActionType" asp-action="ActionTypeCreate" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row mb-2">
                <label class="col-sm-3 col-form-label">ActionTypeName</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="ActionTypeName" class="form-control" />
                </div>
            </div>

           

            <div class="form-group row mb-2">
                <label class="col-sm-3 col-form-label">Action Type Description</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="ActionTypeDescription" class="form-control" />
                </div>
            </div>

            

            <div class="form-group row mb-2">
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-success">Save Action Type</button>
                </div>
            </div>
        </div>
    </div>
</form>
