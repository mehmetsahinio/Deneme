@model ActionTypeModel

<h5 class="display-4">Edit ActionType</h5>
<hr />
<form asp-controller="ActionType" asp-action="ActionTypeEdit" method="post">
    <div class="row">
        <div class="col-md-8">

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Action Type Name</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="ActionTypeName" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Action Type Description</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="ActionTypeDescription" class="form-control" />
                </div>
            </div>
            <div class="form-group row mb-2">
                <input type="hidden" name="actionTypeId" value="@Model.ActionTypeId" />
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</form>